#include <stdio.h>
#include <stdlib.h>

int numRabbits(int* answers, int answersSize) {
    // 답변 값의 빈도를 저장할 배열 (0~999의 값만 사용 가능)
    int count[1000] = {0};
    
    // 각 답변 값이 몇 번 등장했는지 계산
    for (int i = 0; i < answersSize; i++) {
        count[answers[i]]++;
    }
    
    int totalRabbits = 0; // 최소 토끼 수를 저장하는 변수

    // 모든 가능한 답변 값을 순회
    for (int i = 0; i < 1000; i++) {
        if (count[i] > 0) { // 답변 i가 존재하는 경우에만 처리
            int groupSize = i + 1; // 그룹 크기는 (답변 값 + 1)
            
            // 필요한 그룹의 수 계산 (올림 계산)
            int groups = (count[i] + groupSize - 1) / groupSize;

            // 그룹별로 추가해야 할 토끼 수를 계산하여 총 토끼 수에 더함
            totalRabbits += groups * groupSize;
        }
    }

    return totalRabbits; // 최소 토끼 수 반환
}
